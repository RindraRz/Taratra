<Window x:Class="Taratra.Views.ConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Taratra.Views"
        mc:Ignorable="d"
        Title="Configuration" Height="450" Width="800">
    <StackPanel Margin="10">
        <TextBlock Text="Libellé des périodes:" />
        <TextBox Text="{Binding PeriodLibelle, UpdateSourceTrigger=PropertyChanged}" Margin="0,5" />

        <TextBlock Text="Nombre de périodes:" />
        <TextBox Text="{Binding PeriodNumber, UpdateSourceTrigger=PropertyChanged}" Margin="0,5" />

        <TextBlock Text="Types d'évaluation (séparés par une virgule):" />
        <TextBox Text="{Binding EvaluationsText, UpdateSourceTrigger=PropertyChanged}" Margin="0,5" />

        <TextBlock Text="Nom de l'etablissement:"/>
        <TextBox Text ="{Binding EcoleName , UpdateSourceTrigger=PropertyChanged}" Margin="0.5"/>

        <TextBlock Text="Nom du Proviseur"/>
        <TextBox Text="{Binding ProviseurName,UpdateSourceTrigger=PropertyChanged}" Margin="0.5"/>

        <TextBlock Text="Adresse"/>
        <TextBox Text="{Binding EcoleAdresse ,UpdateSourceTrigger=PropertyChanged}" Margin="0.5"/>

        <Button Content="Enregistrer" Command="{Binding SaveCommand}" Margin="0,10" Width="100"/>
    </StackPanel>
</Window>
