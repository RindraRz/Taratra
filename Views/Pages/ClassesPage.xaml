<UserControl x:Class="Taratra.Views.Pages.ClassesPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <!-- Style bouton arrondi rempli -->
        <Style x:Key="RoundedButton" TargetType="Button">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style bouton outline (blanc avec bordure) -->
        <Style x:Key="OutlineButton" TargetType="Button" BasedOn="{StaticResource RoundedButton}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
        </Style>
    </UserControl.Resources>

    <!-- Utiliser Border pour avoir le Padding global (Grid n'a pas Padding en WPF classique) -->
    <Border Background="#F5F7FA" Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Titre -->
            <TextBlock Text="Liste des Classes"
                       FontSize="28"
                       FontWeight="SemiBold"
                       Foreground="#2C3E50"
                       Margin="0 0 0 20"/>

            <!-- DataGrid -->
            <DataGrid Grid.Row="1"
                      ItemsSource="{Binding Classes}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      CanUserResizeRows="False"
                      CanUserAddRows="False"
                      HeadersVisibility="Column"
                      RowHeight="40"
                      ColumnHeaderHeight="42"
                      Margin="0 0 0 20"
                      Background="White"
                      BorderBrush="#DCE1E7"
                      BorderThickness="1"
                      AlternatingRowBackground="#FAFAFA"
                      HorizontalGridLinesBrush="#E1E5EA"
                      VerticalGridLinesBrush="#E1E5EA">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="120"/>
                    <DataGridTextColumn Header="Classe" Binding="{Binding Nom}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Barre actions + pagination -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <!-- On simule l'espacement avec Margin sur chaque élément -->
                <Button Style="{StaticResource RoundedButton}"
                        Command="{Binding ChargerClasseCommand}"
                        Width="130"
                        Margin="0 0 10 0">
                    🔄 Rafraîchir
                </Button>

                <Button Style="{StaticResource OutlineButton}"
                        Command="{Binding PreviousPaginationCommand}"
                        Width="120"
                        Margin="0 0 10 0">
                    ⟨ Précédent
                </Button>

                <TextBlock Text="{Binding CurrentPage}"
                           FontSize="16"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           Margin="0 0 4 0"/>

                <TextBlock Text="/"
                           FontSize="16"
                           VerticalAlignment="Center"
                           Margin="0 0 4 0"/>

                <TextBlock Text="{Binding TotalPages}"
                           FontSize="16"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           Margin="0 0 12 0"/>

                <Button Style="{StaticResource OutlineButton}"
                        Command="{Binding NextPaginationCommand}"
                        Width="120"
                        Margin="0 0 0 0">
                    Suivant ⟩
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
