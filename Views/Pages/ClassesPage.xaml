<UserControl x:Class="Taratra.Views.Pages.ClassesPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:conv="clr-namespace:Taratra.Converters"

             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <!-- Style bouton arrondi rempli -->
      
        <Style x:Key="RoundedButton" TargetType="Button">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style bouton outline -->
        <Style x:Key="OutlineButton" TargetType="Button" BasedOn="{StaticResource RoundedButton}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
        </Style>
    </UserControl.Resources>

    <Border Background="#F5F7FA" Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Header -->
                <RowDefinition Height="*"/>
                <!-- Contenu principal -->
                <RowDefinition Height="Auto"/>
                <!-- Pagination / actions -->
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="0 0 0 20">
                <TextBlock Text="Liste des Classes"
                           FontSize="28"
                           FontWeight="SemiBold"
                           Foreground="#2C3E50"/>
                <Button Style="{StaticResource OutlineButton}"
                        Command="{Binding OpenAddModalCommand}"
                        Width="50"
                        Margin="50 0 10 0"
                        FontSize="10">
                    ➕
                </Button>
            </StackPanel>

            <!-- Contenu principal avec DataGrid et ProgressBar overlay -->
            <Grid Grid.Row="1">
                <!-- DataGrid -->
                <DataGrid ItemsSource="{Binding Classes}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          CanUserResizeRows="False"
                          CanUserAddRows="False"
                          HeadersVisibility="Column"
                          RowHeight="40"
                          ColumnHeaderHeight="42"
                          Margin="0 0 0 20"
                          Background="White"
                          BorderBrush="#DCE1E7"
                          BorderThickness="1"
                          AlternatingRowBackground="#FAFAFA"
                          HorizontalGridLinesBrush="#E1E5EA"
                          VerticalGridLinesBrush="#E1E5EA">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="120"/>
                        <DataGridTextColumn Header="Classe" Binding="{Binding Nom}" Width="*"/>
                        <DataGridTemplateColumn Header="" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="🏁"
                                  Command="{Binding DataContext.VoirClasseCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                  CommandParameter="{Binding Id}"
                                  Background="ForestGreen"
                                  Padding="5"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>  
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="Actions" Width="100">
                            
                            <DataGridTemplateColumn.CellTemplate>
                                
                                <DataTemplate>
                                    
                                    <Button Content="Supprimer"
                                            Command="{Binding DataContext.SupprimerClasseCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding Id}"
                                            Background="Salmon"
                                            Padding="5"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Overlay ProgressBar -->
                <ProgressBar Width="150"
                             Height="20"
                             IsIndeterminate="True"
                             
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"
                             Visibility="{Binding IsProgressBarVisible}"
                             Foreground="#1FB457"
                             Background="#E0E0E0"
                             />
            </Grid>

            <!-- Pagination / actions -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Margin="0 10 0 0">
                <Button Padding="5"
                        Command="{Binding ChargerClasseCommand}"
                        Width="130"
                        Margin="0 0 10 0"
                        Background="Aqua">
                    🔄 Rafraîchir
                </Button>

                <Button Style="{StaticResource OutlineButton}"
                        Command="{Binding PreviousPaginationCommand}"
                        Width="120"
                        Margin="0 0 10 0">
                    ⟨ Précédent
                </Button>

                <TextBlock Text="{Binding CurrentPage}"
                           FontSize="16"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           Margin="0 0 4 0"/>
                <TextBlock Text="/"
                           FontSize="16"
                           VerticalAlignment="Center"
                           Margin="0 0 4 0"/>
                <TextBlock Text="{Binding TotalPages}"
                           FontSize="16"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           Margin="0 0 12 0"/>

                <Button Style="{StaticResource OutlineButton}"
                        Command="{Binding NextPaginationCommand}"
                        Width="120">
                    Suivant ⟩
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
