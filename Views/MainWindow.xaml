<Window x:Class="Taratra.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Taratra.Views"
        mc:Ignorable="d"
        Title="Taratra" Height="450" Width="800" Icon="/Views/icone.png">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <StackPanel Grid.Column="0" Background="#FF2B2B2B" >
            <TextBlock Text="Taratra" FontSize="24" Foreground="White" Margin="20"/>
            <Button Content="Élèves" Margin="10" Height="40" Command="{Binding NavigateElevesCommand}"/>
            <Button Content="Bulletins" Margin="10" Height="40" Command="{Binding NavigateBulletinsCommand}"/>
            <Button Content="Notes" Margin="10" Height="40" Command="{Binding NavigateNotesCommand}"/>
        </StackPanel>

        <!-- Contenu principal -->
        <ContentControl Grid.Column="1" Content="{Binding CurrentPage}" />
    </Grid>
</Window>
